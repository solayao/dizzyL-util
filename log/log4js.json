{
  "appenders": {
    "console": {
      "type": "console"
    },
    "access": {
      "type": "dateFile",
      "filename": "logFiles/access/access.log",
      "pattern": "-yyyy-MM-dd.log",
      "alwaysIncludePattern": true,
      "category": "access"
    },
    "app": {
      "type": "file",
      "filename": "logFiles/app.log",
      "maxLogSize": 10485760,
      "numBackups": 3
    },
    "errorFile": {
      "type": "file",
      "filename": "logFiles/errors.log"
    },
    "errors": {
      "type": "logLevelFilter",
      "level": "ERROR",
      "appender": "errorFile"
    },
    "insert": {
      "type": "dateFile",
      "filename": "logFiles/insert/insert.log",
      "pattern": "-yyyy-MM-dd.log",
      "alwaysIncludePattern": true,
      "category": "insert"
    }
  },
  "categories": {
    "default": { "appenders": [ "console", "app", "errors" ], "level": "DEBUG" },
    "access": { "appenders": [ "access", "errors"], "level": "DEBUG" },
    "insert": { "appenders": [ "insert" ], "level": "DEBUG" }
  }
}